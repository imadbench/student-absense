}

.participation-table th {
    background: var(--bg-color);
    font-weight: 600;
    color: var(--text-primary);
}

.participation-table tbody tr:hover {
    background: var(--bg-color);
}

.participation-form {
    background: var(--bg-color);
    border-radius: 0.5rem;
    padding: 1.5rem;
    margin-top: 1rem;
}

.participation-form h3 {
    font-size: 1.125rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
}

.form-actions {
    display: flex;
    display: none;
}

